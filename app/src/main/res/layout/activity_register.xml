<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.RegisterActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_chevron_left"
        android:background="@color/transparente"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crie_uma_conta"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/blue_text"
        android:layout_marginTop="52.7dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crie_uma_nconta"
        android:layout_below="@+id/back"
        android:textSize="36sp"
        android:textColor="@color/blue_text"
        android:layout_marginTop="122dp"
        android:layout_marginLeft="21dp"/>

    <RelativeLayout
        android:id="@+id/boxName"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/title"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="44dp"
        android:background="@color/soft_blue">
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="11sp"
            android:textColor="@color/blue_text"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/labelName"
            android:layout_marginTop="5.9dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:hint="Seu nome"
            android:textSize="15sp"
            android:textColor="@color/blue_text"
            android:background="@color/transparente"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/boxEmail"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/boxName"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="20dp"
        android:background="@color/soft_blue">
        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textSize="11sp"
            android:textColor="@color/blue_text"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/labelEmail"
            android:layout_marginTop="5.9dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:hint="nome@email.com"
            android:textSize="15sp"
            android:textColor="@color/blue_text"
            android:background="@color/transparente"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/boxSenha"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/boxEmail"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="20dp"
        android:background="@color/soft_blue">
        <TextView
            android:id="@+id/labelSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textSize="11sp"
            android:textColor="@color/blue_text"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/labelSenha"
            android:layout_marginTop="5.9dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:hint="6-12 caracteres"
            android:textSize="15sp"
            android:textColor="@color/blue_text"
            android:background="@color/transparente"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/boxSenha"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="31dp"
        android:text="Criar"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/background_button"/>



</RelativeLayout>